@model C4FAMS.Models.CongViec

<h1>Sửa Công việc</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaCongViec" />
    <div class="form-group">
        <label asp-for="MSSV" class="control-label"></label>
        <select asp-for="MSSV" class="form-control" asp-items="@(new SelectList(ViewBag.CuuSinhVienList, "MSSV", "SinhVien.HoTen"))"></select>
        <span asp-validation-for="MSSV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ViTri" class="control-label"></label>
        <input asp-for="ViTri" class="form-control" />
        <span asp-validation-for="ViTri" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CongTy" class="control-label"></label>
        <input asp-for="CongTy" class="form-control" />
        <span asp-validation-for="CongTy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LinhVuc" class="control-label"></label>
        <input asp-for="LinhVuc" class="form-control" />
        <span asp-validation-for="LinhVuc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThuNhap" class="control-label"></label>
        <input asp-for="ThuNhap" class="form-control" />
        <span asp-validation-for="ThuNhap" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}