@model C4FAMS.Models.ThanhTuu

<div class="container">
    <h1 class="mt-4 mb-4">Xóa Thành tựu</h1>

    <h3>Bạn có chắc chắn muốn xóa thành tựu này?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Tên thành tựu</dt>
            <dd class="col-sm-9">@Model.TenThanhTuu</dd>
            <dt class="col-sm-3">Năm đạt được</dt>
            <dd class="col-sm-9">@Model.NamDatDuoc</dd>
        </dl>

        <form asp-action="DeleteAchievementConfirmed" method="post">
            <input type="hidden" asp-for="MaThanhTuu" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="ManageProfile" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>