@model C4FAMS.Models.CuuSinhVien

<h1>Thêm Cựu Sinh viên</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MSSV" class="control-label"></label>
        <select asp-for="MSSV" class="form-control" asp-items="@(new SelectList(ViewBag.SinhVienList, "MSSV", "HoTen"))"></select>
        <span asp-validation-for="MSSV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamTotNghiep" class="control-label"></label>
        <input asp-for="NamTotNghiep" class="form-control" />
        <span asp-validation-for="NamTotNghiep" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="XepLoaiTotNghiep" class="control-label"></label>
        <select asp-for="XepLoaiTotNghiep" class="form-control">
            <option value="Xuất sắc">Xuất sắc</option>
            <option value="Giỏi">Giỏi</option>
            <option value="Khá">Khá</option>
            <option value="Trung bình">Trung bình</option>
        </select>
        <span asp-validation-for="XepLoaiTotNghiep" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HinhThucLienLac" class="control-label"></label>
        <select asp-for="HinhThucLienLac" class="form-control">
            <option value="Email">Email</option>
            <option value="Phone">Phone</option>
        </select>
        <span asp-validation-for="HinhThucLienLac" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}