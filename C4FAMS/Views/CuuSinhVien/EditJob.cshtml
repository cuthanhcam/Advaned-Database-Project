@model C4FAMS.Models.CongViecViewModel

<div class="container">
    <h1 class="mt-4 mb-4" style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white; padding: 10px; border-radius: 5px;">Chỉnh sửa Công việc</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="EditJob" method="post" class="shadow-sm rounded p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="MaCongViec" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="ViTri" class="form-label fw-bold fs-6 text-cyan"></label>
                <input asp-for="ViTri" class="form-control fs-6" placeholder="Nhập vị trí công việc" />
                <span asp-validation-for="ViTri" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CongTy" class="form-label fw-bold fs-6 text-cyan"></label>
                <input asp-for="CongTy" class="form-control fs-6" placeholder="Nhập tên công ty" />
                <span asp-validation-for="CongTy" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LinhVuc" class="form-label fw-bold fs-6 text-cyan"></label>
                <input asp-for="LinhVuc" class="form-control fs-6" placeholder="Nhập lĩnh vực" />
                <span asp-validation-for="LinhVuc" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ThuNhap" class="form-label fw-bold fs-6 text-cyan"></label>
                <input asp-for="ThuNhap" class="form-control fs-6" type="number" step="0.01" placeholder="Nhập thu nhập" />
                <span asp-validation-for="ThuNhap" class="text-danger"></span>
            </div>

            <div class="col-md-12 mt-4">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="ManageProfile" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-cyan { color: #00BCD4; }
    .fs-6 { font-size: 0.95rem; }
</style>