@model IEnumerable<C4FAMS.Models.CuuSinhVien>

<div class="container">
    <h1 class="mt-4 mb-4" style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white; padding: 10px; border-radius: 5px;">Danh sách Cựu Sinh Viên</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm rounded">
            <thead style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white;" class="fs-6">
                <tr>
                    <th style="width: 25%;">MSSV</th>
                    <th style="width: 30%;">Họ tên</th>
                    <th style="width: 20%; text-align: center;">Năm tốt nghiệp</th>
                    <th style="width: 25%; text-align: center;">Hành động</th>
                </tr>
            </thead>
            <tbody class="fs-6">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MSSV</td>
                        <td>@item.SinhVien?.HoTen</td>
                        <td class="text-center">@item.NamTotNghiep</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-mssv="@item.MSSV" class="btn btn-sm btn-info" title="Chi tiết"><i class="bi bi-eye"></i></a>
                                <a asp-action="Edit" asp-route-mssv="@item.MSSV" class="btn btn-sm btn-primary" title="Sửa"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-mssv="@item.MSSV" class="btn btn-sm btn-danger" title="Xóa"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"></script>
}

<style>
    .fs-6 { font-size: 0.95rem; }
    .shadow-sm { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
    .rounded { border-radius: 8px; }
    .btn-sm { 
        padding: 0.25rem 0.4rem;
        font-size: 0.75rem;
        width: 34px;
        text-align: center;
    }
    .btn-group .btn {
        margin: 0;
    }
    .btn-group {
        display: flex;
        gap: 2px;
    }
    .table th, .table td {
        vertical-align: middle;
        padding: 0.5rem;
    }
</style>