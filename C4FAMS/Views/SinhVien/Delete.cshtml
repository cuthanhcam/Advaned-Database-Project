@model C4FAMS.Models.SinhVien

<div class="container">
    <h1 class="mt-4 mb-4">Xóa Sinh viên</h1>

    <h3>Bạn có chắc muốn xóa sinh viên này?</h3>
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">MSSV</dt>
                <dd class="col-sm-9">@Model.MSSV</dd>
                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.HoTen</dd>
                <dt class="col-sm-3">Giới tính</dt>
                <dd class="col-sm-9">@(Model.GioiTinh ? "Nam" : "Nữ")</dd>
                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-3">Quê quán</dt>
                <dd class="col-sm-9">@Model.QueQuan</dd>
                <dt class="col-sm-3">Chuyên ngành</dt>
                <dd class="col-sm-9">@Model.ChuyenNganh?.TenChuyenNganh</dd>
                <dt class="col-sm-3">Khóa học</dt>
                <dd class="col-sm-9">@Model.KhoaHoc</dd>
                <dt class="col-sm-3">Lớp</dt>
                <dd class="col-sm-9">@Model.Lop</dd>
                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">@Model.TrangThai</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.SoDienThoai</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MSSV" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>