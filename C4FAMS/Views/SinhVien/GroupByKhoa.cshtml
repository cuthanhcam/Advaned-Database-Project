@model IEnumerable<dynamic>

<h1>Sinh viên theo Khoa</h1>

@foreach (var group in Model)
{
    <h3>@group.Khoa</h3>
    <table class="table">
        <thead>
            <tr>
                <th>MSSV</th>
                <th>Họ Tên</th>
                <th>Giới Tính</th>
                <th>Ngày Sinh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in group.SinhViens)
            {
                <tr>
                    <td>@item.MSSV</td>
                    <td>@item.HoTen</td>
                    <td>@(item.GioiTinh ? "Nam" : "Nữ")</td>
                    <td>@item.NgaySinh.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="Index">Quay lại</a>