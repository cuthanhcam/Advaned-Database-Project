@model C4FAMS.Models.SinhVien

<div class="container">
    <h1 class="mt-4 mb-4">Cập nhật Trạng thái Sinh viên</h1>

    <div class="card mb-4">
        <div class="card-header">
            Thông tin Sinh viên
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">MSSV</dt>
                <dd class="col-sm-9">@Model.MSSV</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.HoTen</dd>

                <dt class="col-sm-3">Trạng thái hiện tại</dt>
                <dd class="col-sm-9">@Model.TrangThai</dd>
            </dl>
        </div>
    </div>

    <form asp-action="TrangThai" method="post">
        <input type="hidden" asp-for="MSSV" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-3">
            <label class="form-label">Cập nhật Trạng thái</label>
            <select asp-for="TrangThai" class="form-control" asp-items="Html.GetEnumSelectList<TrangThaiSinhVien>()" required>
                <option value="">-- Chọn Trạng thái --</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}