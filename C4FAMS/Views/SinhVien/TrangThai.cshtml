@model C4FAMS.Models.SinhVien

<div class="container">
    <h1 class="mt-4 mb-4" style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white; padding: 10px; border-radius: 5px;">Cập nhật Trạng thái Sinh viên</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm rounded">
        <div class="card-header" style="background: #00BCD4; color: white;">
            Thông tin Sinh viên
        </div>
        <div class="card-body">
            <dl class="row g-3">
                <dt class="col-sm-3 fw-bold fs-6 text-cyan">MSSV</dt>
                <dd class="col-sm-9 fs-6">@Model.MSSV</dd>
                <dt class="col-sm-3 fw-bold fs-6 text-cyan">Họ tên</dt>
                <dd class="col-sm-9 fs-6">@Model.HoTen</dd>
                <dt class="col-sm-3 fw-bold fs-6 text-cyan">Trạng thái hiện tại</dt>
                <dd class="col-sm-9 fs-6">@Model.TrangThai</dd>
            </dl>
        </div>
    </div>

    <form asp-action="TrangThai" method="post" class="shadow-sm rounded p-3">
        <input type="hidden" asp-for="MSSV" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row g-3">
            <div class="col-md-12">
                <label class="form-label fw-bold fs-6 text-cyan">Cập nhật Trạng thái</label>
                <select asp-for="TrangThai" class="form-control fs-6" asp-items="Html.GetEnumSelectList<TrangThaiSinhVien>()" required>
                    <option value="">-- Chọn Trạng thái --</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-4">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-cyan { color: #00BCD4; }
    .fs-6 { font-size: 0.95rem; }
    .shadow-sm { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
    .rounded { border-radius: 8px; }
</style>