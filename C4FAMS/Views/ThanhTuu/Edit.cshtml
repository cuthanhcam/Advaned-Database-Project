@model C4FAMS.Models.ThanhTuu

<h1>Sửa Thành tựu</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaThanhTuu" />
    <div class="form-group">
        <label asp-for="MSSV" class="control-label"></label>
        <select asp-for="MSSV" class="form-control" asp-items="@(new SelectList(ViewBag.CuuSinhVienList, "MSSV", "SinhVien.HoTen"))"></select>
        <span asp-validation-for="MSSV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenThanhTuu" class="control-label"></label>
        <input asp-for="TenThanhTuu" class="form-control" />
        <span asp-validation-for="TenThanhTuu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamDatDuoc" class="control-label"></label>
        <input asp-for="NamDatDuoc" class="form-control" />
        <span asp-validation-for="NamDatDuoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}