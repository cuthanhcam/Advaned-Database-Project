@model C4FAMS.Models.SuKien

<h1>Thêm Sự kiện</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenSuKien" class="control-label"></label>
        <input asp-for="TenSuKien" class="form-control" />
        <span asp-validation-for="TenSuKien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NgayToChuc" class="control-label"></label>
        <input asp-for="NgayToChuc" class="form-control" type="datetime-local" />
        <span asp-validation-for="NgayToChuc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiaDiem" class="control-label"></label>
        <input asp-for="DiaDiem" class="form-control" />
        <span asp-validation-for="DiaDiem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaKhoa" class="control-label"></label>
        <select asp-for="MaKhoa" class="form-control" asp-items="@(new SelectList(ViewBag.KhoaList, "MaKhoa", "TenKhoa"))"></select>
        <span asp-validation-for="MaKhoa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}