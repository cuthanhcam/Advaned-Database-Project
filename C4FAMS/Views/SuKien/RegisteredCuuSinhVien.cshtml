@model dynamic

<div class="container">
    <h1 class="mt-4 mb-4" style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white; padding: 10px; border-radius: 5px;">Danh sách Cựu Sinh Viên đăng ký sự kiện: @ViewBag.SuKien.TenSuKien</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm rounded">
        <div class="card-body">
            <dl class="row g-3">
                <dt class="col-sm-3 fw-bold fs-6 text-cyan">Ngày tổ chức</dt>
                <dd class="col-sm-9 fs-6">@ViewBag.SuKien.NgayToChuc.ToString("dd/MM/yyyy HH:mm")</dd>
                <dt class="col-sm-3 fw-bold fs-6 text-cyan">Địa điểm</dt>
                <dd class="col-sm-9 fs-6">@ViewBag.SuKien.DiaDiem</dd>
                <dt class="col-sm-3 fw-bold fs-6 text-cyan">Khoa</dt>
                <dd class="col-sm-9 fs-6">@(ViewBag.SuKien.Khoa?.TenKhoa ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <table class="table table-bordered table-hover shadow-sm rounded">
        <thead style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white;" class="fs-6">
            <tr>
                <th style="width: 20%;">MSSV</th>
                <th style="width: 30%;">Họ tên</th>
                <th style="width: 30%;">Email</th>
                <th style="width: 20%;">Ngày đăng ký</th>
            </tr>
        </thead>
        <tbody class="fs-6">
            @foreach (var item in ViewBag.RegisteredUsers)
            {
                <tr>
                    <td>@item.MSSV</td>
                    <td>@item.HoTen</td>
                    <td>@item.Email</td>
                    <td>@item.NgayDangKy.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

<style>
    .text-cyan { color: #00BCD4; }
    .fs-6 { font-size: 0.95rem; }
    .shadow-sm { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
    .rounded { border-radius: 8px; }
</style>