@model dynamic

<div class="container">
    <h1 class="mt-4 mb-4">Danh sách Cựu Sinh Viên đăng ký sự kiện: @ViewBag.SuKien.TenSuKien</h1>

    <dl class="row mb-4">
        <dt class="col-sm-3">Ngày tổ chức</dt>
        <dd class="col-sm-9">@ViewBag.SuKien.NgayToChuc.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-3">Địa điểm</dt>
        <dd class="col-sm-9">@ViewBag.SuKien.DiaDiem</dd>
        <dt class="col-sm-3">Khoa</dt>
        <dd class="col-sm-9">@(ViewBag.SuKien.Khoa?.TenKhoa ?? "N/A")</dd>
    </dl>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>MSSV</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Ngày đăng ký</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.RegisteredUsers)
            {
                <tr>
                    <td>@item.MSSV</td>
                    <td>@item.HoTen</td>
                    <td>@item.Email</td>
                    <td>@item.NgayDangKy.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>