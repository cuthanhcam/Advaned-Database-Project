@model C4FAMS.Models.SuKien

<div class="container">
    <h1 class="mt-4 mb-4">Chỉnh sửa Sự kiện</h1>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="MaSuKien" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="TenSuKien" class="form-label"></label>
            <input asp-for="TenSuKien" class="form-control" required />
            <span asp-validation-for="TenSuKien" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NgayToChuc" class="form-label"></label>
            <input asp-for="NgayToChuc" type="datetime-local" class="form-control" value="@Model.NgayToChuc.ToString("yyyy-MM-ddTHH:mm")" required />
            <span asp-validation-for="NgayToChuc" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DiaDiem" class="form-label"></label>
            <input asp-for="DiaDiem" class="form-control" required />
            <span asp-validation-for="DiaDiem" class="text-danger"></span>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="form-group mb-3">
                <label asp-for="MaKhoa" class="form-label">Khoa</label>
                <select asp-for="MaKhoa" class="form-control" asp-items="@(new SelectList(ViewBag.KhoaList ?? new List<C4FAMS.Models.Khoa>(), "MaKhoa", "TenKhoa"))" required>
                    <option value="">-- Chọn Khoa --</option>
                </select>
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
        }

        <div class="form-group mb-3">
            <label class="form-label">Mô tả</label>
            <textarea name="suKienChiTiet.MoTa" class="form-control" rows="3">@ViewBag.SuKienChiTiet?.MoTa</textarea>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Nội dung</label>
            <textarea name="suKienChiTiet.NoiDung" class="form-control" rows="5">@ViewBag.SuKienChiTiet?.NoiDung</textarea>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Hình ảnh hiện tại</label>
            @if (Model.SuKienHinhAnhs != null && Model.SuKienHinhAnhs.Any())
            {
                <div class="d-flex flex-wrap gap-2 mb-2">
                    @foreach (var hinhAnh in Model.SuKienHinhAnhs)
                    {
                        <img src="@hinhAnh.HinhAnh" alt="@Model.TenSuKien" class="img-fluid rounded" style="max-width: 100px;" />
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Không có hình ảnh nào.</p>
            }
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Tải lên hình ảnh mới</label>
            <input type="file" name="images" class="form-control" accept=".jpg,.jpeg,.png" multiple />
            <small class="text-muted">Bạn có thể upload thêm hình ảnh (jpg, jpeg, png).</small>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}