@model C4FAMS.Models.ManageViewModel

<div class="container">
    <h1 class="mt-4 mb-4 text-cyan">Quản lý tài khoản</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-header" style="background-color: #E0F7FA; color: #0288D1;">Thông tin tài khoản</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">@Model.VaiTro</dd>
                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">@(Model.TrangThai ? "Hoạt động" : "Ngưng hoạt động")</dd>
                @if (!string.IsNullOrEmpty(Model.TenKhoa))
                {
                    <dt class="col-sm-3">Khoa</dt>
                    <dd class="col-sm-9">@Model.TenKhoa</dd>
                }
            </dl>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header" style="background-color: #E0F7FA; color: #0288D1;">Đổi mật khẩu</div>
        <div class="card-body">
            <form asp-action="Manage" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="OldPassword" class="form-label fw-bold">Mật khẩu cũ</label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="form-label fw-bold">Mật khẩu mới</label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label fw-bold">Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <div class="form-group d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Quay lại</a>
        <form asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger">Đăng xuất</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-cyan { color: #00BCD4; }
    .shadow-sm { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
</style>