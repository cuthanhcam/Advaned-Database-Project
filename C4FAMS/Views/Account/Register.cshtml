@model C4FAMS.Models.RegisterViewModel

<div class="container">
    <h1 class="mt-4 mb-4">Đăng ký</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Mật khẩu</label>
            <input asp-for="Password" class="form-control" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MSSV" class="form-label">MSSV</label>
            <input asp-for="MSSV" class="form-control" required />
            <span asp-validation-for="MSSV" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NamTotNghiep" class="form-label">Năm tốt nghiệp</label>
            <input asp-for="NamTotNghiep" class="form-control" type="number" required />
            <span asp-validation-for="NamTotNghiep" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="XepLoaiTotNghiep" class="form-label">Xếp loại tốt nghiệp</label>
            <select asp-for="XepLoaiTotNghiep" class="form-control" required>
                <option value="">Chọn xếp loại</option>
                <option value="Xuất Sắc">Xuất Sắc</option>
                <option value="Giỏi">Giỏi</option>
                <option value="Khá">Khá</option>
                <option value="Trung Bình">Trung Bình</option>
            </select>
            <span asp-validation-for="XepLoaiTotNghiep" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DiaChiHienTai" class="form-label">Địa chỉ hiện tại</label>
            <input asp-for="DiaChiHienTai" class="form-control" />
            <span asp-validation-for="DiaChiHienTai" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="HinhThucLienLac" class="form-label">Hình thức liên lạc cụ thể (Email hoặc SĐT)</label>
            <input asp-for="HinhThucLienLac" class="form-control" placeholder="Ví dụ: example@email.com hoặc 0901234567" required />
            <span asp-validation-for="HinhThucLienLac" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("form").submit(function (e) {
                var password = $("#Password").val();
                var confirmPassword = $("#ConfirmPassword").val();
                if (password !== confirmPassword) {
                    alert("Mật khẩu và xác nhận mật khẩu không khớp!");
                    e.preventDefault();
                }
                if (password.length < 6) {
                    alert("Mật khẩu phải có ít nhất 6 ký tự!");
                    e.preventDefault();
                }
                var mssv = $("#MSSV").val();
                if (!/^\d{10}$/.test(mssv)) {
                    $("#mssv-error").text("MSSV phải là 10 chữ số!");
                    e.preventDefault();
                } else {
                    $("#mssv-error").text("");
                }
            });
        });
    </script>
}