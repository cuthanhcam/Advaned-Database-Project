@model C4FAMS.Models.LoginViewModel

<div class="container">
    <h1 class="mt-4 mb-4" style="background: linear-gradient(90deg, #00BCD4, #0288D1); color: white; padding: 10px; border-radius: 5px;">Đăng nhập</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" asp-action="Login" class="card p-4 shadow-sm rounded">
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row g-3">
            <div class="col-md-12">
                <label asp-for="Email" class="form-label fw-bold fs-6 text-cyan">Email</label>
                <input asp-for="Email" class="form-control fs-6" type="email" placeholder="Nhập email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Password" class="form-label fw-bold fs-6 text-cyan">Mật khẩu</label>
                <input asp-for="Password" class="form-control fs-6" type="password" placeholder="Nhập mật khẩu" required minlength="6" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label fs-6 text-cyan">Ghi nhớ đăng nhập</label>
                </div>
            </div>
            <div class="col-md-12 mt-4">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                <a asp-action="Register" asp-controller="Account" class="btn btn-secondary ms-2">Đăng ký Cựu Sinh Viên</a>
            </div>
        </div>
    </form>
</div>

<style>
    .text-cyan { color: #00BCD4; }
    .fs-6 { font-size: 0.95rem; }
    .card { border: 1px solid #E0F7FA; }
    .shadow-sm { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
    .rounded { border-radius: 8px; }
</style>