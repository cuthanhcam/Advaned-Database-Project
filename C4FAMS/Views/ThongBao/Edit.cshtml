@model C4FAMS.Models.ThongBao

<h1>Sửa Thông báo</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaThongBao" />
    <div class="form-group">
        <label asp-for="MSSV" class="control-label"></label>
        <select asp-for="MSSV" class="form-control" asp-items="@(new SelectList(ViewBag.CuuSinhVienList, "MSSV", "SinhVien.HoTen"))"></select>
        <span asp-validation-for="MSSV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NoiDung" class="control-label"></label>
        <textarea asp-for="NoiDung" class="form-control"></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="false">Chưa đọc</option>
            <option value="true">Đã đọc</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}