@model C4FAMS.Models.Khoa

<div class="container">
    <h1 class="mt-4 mb-4">Xóa Khoa</h1>

    <h3>Bạn có chắc muốn xóa khoa này?</h3>
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên Khoa</dt>
                <dd class="col-sm-9">@Model.TenKhoa</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Số Điện Thoại</dt>
                <dd class="col-sm-9">@Model.SoDienThoai</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaKhoa" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>