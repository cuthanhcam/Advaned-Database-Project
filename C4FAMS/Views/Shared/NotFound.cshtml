@model string
@{
    ViewData["Title"] = "Không tìm thấy";
}

<div class="container text-center mt-5">
    <h1 class="display-4">404 - Không tìm thấy</h1>
    <p class="lead">Trang bạn đang tìm kiếm không tồn tại.</p>
    @if (!string.IsNullOrEmpty(Model))
    {
        <p class="text-muted">@Model</p>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Quay lại trang chủ</a>
</div>